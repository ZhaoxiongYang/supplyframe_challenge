<div class="mdc-card demo-card  " style="background:#AAA; color:#000">
    <div class="mdc-card__primary-action demo-card__primary-action" tabindex="0">
        <div class="mdc-card__media mdc-card__media--16-9 demo-card__media"
            style="background-image: url(&quot;<%=project.image_url%>&quot;);"></div>
        <div class="demo-card__primary ">
            <h2 class="demo-card__title show_projectname"><%=project.name%></h2>
            <%if(!project.user ||!project.user.username){%>
            <h3 class="demo-card__subtitle mdc-typography mdc-typography--subtitle2 show_username " id="myTooltip">by
                Anonymous</h3>
            <%}else{%>
            <h3 class="demo-card__subtitle show_username " id="myTooltip">by <%=project.user.username%></h3>
            <%}%>
          </div>
          <div class="demo-card__secondary mdc-typography mdc-typography--body2 show_summary"><%=project.summary%>
        </div>
    </div>
    <div class="mdc-card__actions">
        <div class="mdc-card__action-buttons">
            <button class="mdc-button mdc-card__action mdc-card__action--button"><a
                    href="/project/<%=project.id%>">LEARN MORE</a></button>

        </div>
        <div class="mdc-card__action-icons">
            <button class="mdc-icon-button mdc-card__action mdc-card__action--icon--unbounded" aria-pressed="false"
                aria-label="Add to favorites" title="Add to favorites">
                <i class="material-icons mdc-icon-button__icon mdc-icon-button__icon--on">favorite</i>
                <i class="material-icons mdc-icon-button__icon">favorite_border</i>
            </button>
            <button class="mdc-icon-button material-icons mdc-card__action mdc-card__action--icon--unbounded"
                title="<%= project.comments%> comments" data-mdc-ripple-is-unbounded="true">message</button>
            <button class="mdc-icon-button material-icons mdc-card__action mdc-card__action--icon--unbounded"
                title="<%= project.followers%> followers" data-mdc-ripple-is-unbounded="true">perm_identity</button>
        </div>
    </div>
</div>